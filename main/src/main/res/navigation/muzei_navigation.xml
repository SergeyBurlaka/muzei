<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.google.android.apps.muzei.MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/activate_wallpaper"
            app:destination="@id/activate"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <navigation
        android:id="@+id/activate"
        app:startDestination="@id/intro_fragment">
        <fragment
            android:id="@+id/intro_fragment"
            android:name="com.google.android.apps.muzei.IntroFragment"
            tools:layout="@layout/intro_fragment">
            <action
                android:id="@+id/show_tutorial"
                app:destination="@id/tutorial_fragment"/>
        </fragment>
        <fragment
            android:id="@+id/tutorial_fragment"
            android:name="com.google.android.apps.muzei.TutorialFragment"
            tools:layout="@layout/tutorial_fragment">
        </fragment>
        <action
            android:id="@+id/action_finish"
            app:popUpTo="@id/main_fragment"/>
    </navigation>
</navigation>
